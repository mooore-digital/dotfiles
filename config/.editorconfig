# EditorConfig helps developers define and maintain consistency
# coding styles between different editors and IDEs
# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mdx}]
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 80

[*.{html,css,less,sass,scss}]
indent_size = 4
max_line_length = 80

[*.{js,ts,vue,jsx,tsx}]
indent_size = 2
max_line_length = 80

[*.{xml,phtml,php}]
indent_size = 4
max_line_length = 120

[{composer,auth}.json]
indent_size = 4
